<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".finalProject.fragments.Recommendation"
    tools:ignore="UnusedAttribute"
    tools:targetApi="m">

    <RelativeLayout
        android:id="@+id/recommendation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fuzzybubblesbold"
            android:text="@string/yummy_china"
            android:textColor="@color/fog_red"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backBtn2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_circle"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="4dp"
            android:src="@drawable/ic_back" />

        <ImageButton
            android:id="@+id/nextBtn2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp"
            android:background="@drawable/ic_circle"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="4dp"
            android:src="@drawable/ic_next"
            android:visibility="gone" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recommendation_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/daily_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dish_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fuzzybubblesbold"
                    android:text="@string/dish_of_the_day"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dish_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dish_topic"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/admin_pic"
                    android:background="@android:color/transparent"
                    android:minLines="2" />

                <TextView
                    android:id="@+id/dish_recipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dish_description"
                    android:fontFamily="@font/fuzzybubblesbold"
                    android:text="@string/detailed_recipe"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/detailed_recipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dish_recipe"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:minLines="5" />

                <ImageView
                    android:id="@+id/admin_pic"
                    android:layout_width="198dp"
                    android:layout_height="146dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/dish_of_the_day_pic"
                    android:src="@drawable/c01" />
            </RelativeLayout>

            <View
                android:id="@+id/view_rc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/daily_panel"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:background="#000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_rc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_rc" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>